#!/usr/bin/env bash

# Avoid mutating shell options when sourced.
if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
  set -euo pipefail
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=./gcp-common
source "${SCRIPT_DIR}/gcp-common"
RUNNING_AS_SCRIPT=0
if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
  RUNNING_AS_SCRIPT=1
fi

usage() {
  cat <<USAGE
Usage:
  source gcp-auth [-y|--yes] <profile_number_or_name> [project_id] [account_email]
  source gcp-auth -l|--list-profiles
  source gcp-auth -h|--help

Examples:
  source gcp-auth c1-stage c1-stage-project admin-c1@company1.com
  source gcp-auth c2-prod  c2-prod-project  admin-c2@company2.com
  source gcp-auth c1-stage
  source gcp-auth 2

Notes:
  - This script is intended to be sourced by the current shell.
  - Use 'source' so CLOUDSDK_CONFIG/PROJECT vars are applied to the current shell.
  - Creates isolated gcloud config + ADC per profile under \$GCP_CFG_BASE/<profile>
  - Default GCP_CFG_BASE is \$XDG_CONFIG_HOME/gcpdash (or ~/.config/gcpdash)
  - Useful for pinning a VS Code terminal (and Codex) to one GCP profile/project.
  - Scope: human user auth context only; no service account impersonation helpers.
USAGE
  echo
  echo "Other GCP commands:"
  gcp_print_command_catalog "gcp-auth"
  if [[ "$RUNNING_AS_SCRIPT" -eq 1 ]]; then
    echo
    echo "Saved profiles:"
    list_profiles
  fi
}

list_profiles() {
  local base_dir
  base_dir="$(gcp_base_dir)"
  local active_profile
  active_profile="${CLOUDSDK_CONFIG:+$(basename "$CLOUDSDK_CONFIG")}"
  # shellcheck disable=SC2034  # passed by name to gcp_collect_profiles / gcp_print_profiles_numbered
  declare -a profiles=()
  # shellcheck disable=SC2034  # passed by name to gcp_collect_profiles / gcp_print_profiles_numbered
  declare -A profile_accounts=()
  # shellcheck disable=SC2034  # passed by name to gcp_collect_profiles / gcp_print_profiles_numbered
  declare -A profile_projects=()

  echo "GCP profile base: $base_dir"
  gcp_collect_profiles "$base_dir" profiles profile_accounts profile_projects

  if [[ "${#profiles[@]}" -eq 0 ]]; then
    echo "(no profiles found)"
    return 0
  fi

  gcp_print_profiles_numbered profiles profile_accounts profile_projects "$active_profile"
}

confirm_change() {
  local prompt="$1"
  local reply
  if [[ ! -t 0 ]]; then
    echo "Error: profile update needs interactive confirmation." >&2
    return 1
  fi
  read -r -p "$prompt [y/N]: " reply
  [[ "$reply" =~ ^[Yy]([Ee][Ss])?$ ]]
}

looks_like_email() {
  local value="$1"
  [[ "$value" == *"@"* && "$value" == *.* ]]
}

looks_like_project_id() {
  local value="$1"
  [[ "$value" =~ ^[a-z][a-z0-9-]{4,28}[a-z0-9]$ ]]
}

normalize_project_and_account_args() {
  # Common typo: second positional is account email (project omitted).
  if [[ -n "$PROJECT_ID" && -z "$ACCOUNT_EMAIL" ]] && looks_like_email "$PROJECT_ID"; then
    ACCOUNT_EMAIL="$PROJECT_ID"
    PROJECT_ID=""
    return
  fi

  # Recover from swapped args: project=email and account=project-id.
  if [[ -n "$PROJECT_ID" && -n "$ACCOUNT_EMAIL" ]] \
    && looks_like_email "$PROJECT_ID" \
    && ! looks_like_email "$ACCOUNT_EMAIL" \
    && looks_like_project_id "$ACCOUNT_EMAIL"; then
    local swapped_project="$ACCOUNT_EMAIL"
    local swapped_account="$PROJECT_ID"
    PROJECT_ID="$swapped_project"
    ACCOUNT_EMAIL="$swapped_account"
    echo "Warning: argument order looked swapped; using project='$PROJECT_ID' account='$ACCOUNT_EMAIL'." >&2
  fi
}

ASSUME_YES=0
while [[ $# -gt 0 ]]; do
  case "${1:-}" in
    -h|--help)
      usage
      return 0 2>/dev/null || exit 0
      ;;
    -l|--list-profiles)
      list_profiles
      return 0 2>/dev/null || exit 0
      ;;
    -y|--yes)
      ASSUME_YES=1
      shift
      ;;
    --)
      shift
      break
      ;;
    -*)
      echo "Error: unknown option: $1" >&2
      usage
      return 2 2>/dev/null || exit 2
      ;;
    *)
      break
      ;;
  esac
done

if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
  echo "Warning: gcp-auth is designed to be sourced (run: source gcp-auth ...)." >&2
fi

PROFILE_SELECTOR="${1:-}"
PROJECT_ID="${2:-}"
ACCOUNT_EMAIL="${3:-}"

normalize_project_and_account_args

if [[ -z "$PROFILE_SELECTOR" ]]; then
  list_profiles
  echo
  echo "Run: source gcp-auth <profile_number_or_name> [project_id] [account_email]"
  return 0 2>/dev/null || exit 0
fi

BASE_DIR="$(gcp_base_dir)"
# shellcheck disable=SC2034  # passed by name to gcp_collect_profiles / gcp_resolve_profile_selector
declare -a PROFILES=()
# shellcheck disable=SC2034  # passed by name to gcp_collect_profiles
declare -A PROFILE_ACCOUNTS=()
# shellcheck disable=SC2034  # passed by name to gcp_collect_profiles
declare -A PROFILE_PROJECTS=()
# shellcheck disable=SC2034  # output holder used via nameref by gcp_resolve_profile_selector
RESOLVED_INDEX=""
PROFILE="$PROFILE_SELECTOR"

gcp_collect_profiles "$BASE_DIR" PROFILES PROFILE_ACCOUNTS PROFILE_PROJECTS
if gcp_resolve_profile_selector PROFILES "$PROFILE_SELECTOR" PROFILE RESOLVED_INDEX; then
  :
elif [[ "$PROFILE_SELECTOR" =~ ^[0-9]+$ ]]; then
  echo "Error: profile number '$PROFILE_SELECTOR' not found." >&2
  list_profiles
  return 2 2>/dev/null || exit 2
fi

if ! gcp_validate_new_profile_name "$PROFILE"; then
  echo "Error: invalid profile name '$PROFILE'." >&2
  return 2 2>/dev/null || exit 2
fi

if ! command -v gcloud >/dev/null 2>&1; then
  echo "Error: gcloud not found in PATH." >&2
  return 127 2>/dev/null || exit 127
fi

# Isolated gcloud config dir (includes ADC storage)
GCP_CFG_BASE="$(gcp_base_dir)"
GCP_CFG_DIR="${GCP_CFG_BASE}/${PROFILE}"
PROFILE_EXISTS=0
if [[ -d "$GCP_CFG_DIR" ]]; then
  PROFILE_EXISTS=1
fi

SAVED_PROJECT=""
SAVED_ACCOUNT=""
if [[ "$PROFILE_EXISTS" -eq 1 ]]; then
  SAVED_PROJECT="$(CLOUDSDK_CONFIG="$GCP_CFG_DIR" gcloud config get-value project 2>/dev/null || true)"
  SAVED_ACCOUNT="$(CLOUDSDK_CONFIG="$GCP_CFG_DIR" gcloud config get-value account 2>/dev/null || true)"
  [[ "$SAVED_PROJECT" == "(unset)" ]] && SAVED_PROJECT=""
  [[ "$SAVED_ACCOUNT" == "(unset)" ]] && SAVED_ACCOUNT=""
fi

EFFECTIVE_PROJECT="$PROJECT_ID"
EFFECTIVE_ACCOUNT="$ACCOUNT_EMAIL"
PROJECT_CHANGED=1
ACCOUNT_CHANGED=1
RUN_PROFILE_MUTATION=1
RUN_GCLOUD_LOGIN=0
RUN_ADC_LOGIN=0
RUN_ADC_QUOTA_SET=0

if [[ "$PROFILE_EXISTS" -eq 1 ]]; then
  if [[ -z "$EFFECTIVE_PROJECT" ]]; then
    EFFECTIVE_PROJECT="$SAVED_PROJECT"
  fi
  if [[ -z "$EFFECTIVE_ACCOUNT" ]]; then
    EFFECTIVE_ACCOUNT="$SAVED_ACCOUNT"
  fi

  if [[ "$EFFECTIVE_PROJECT" == "$SAVED_PROJECT" ]]; then
    PROJECT_CHANGED=0
  fi
  if [[ "$EFFECTIVE_ACCOUNT" == "$SAVED_ACCOUNT" ]]; then
    ACCOUNT_CHANGED=0
  fi
  if [[ "$PROJECT_CHANGED" -eq 0 && "$ACCOUNT_CHANGED" -eq 0 ]]; then
    RUN_PROFILE_MUTATION=0
  fi
fi

if [[ -z "$EFFECTIVE_PROJECT" ]]; then
  echo "Error: profile '$PROFILE' has no saved project. Specify <project_id>." >&2
  if [[ -n "$ACCOUNT_EMAIL" ]]; then
    echo "Hint: argument order is: source gcp-auth <profile> <project_id> [account_email]" >&2
  fi
  return 2 2>/dev/null || exit 2
fi

if ! looks_like_project_id "$EFFECTIVE_PROJECT"; then
  echo "Error: invalid project_id '$EFFECTIVE_PROJECT'." >&2
  echo "Hint: use: source gcp-auth <profile> <project_id> [account_email]" >&2
  return 2 2>/dev/null || exit 2
fi

if [[ "$PROFILE_EXISTS" -eq 1 && "$RUN_PROFILE_MUTATION" -eq 1 ]]; then
  echo "Profile '$PROFILE' already exists."
  echo "  Saved project: ${SAVED_PROJECT:-<unset>}"
  echo "  Saved account: ${SAVED_ACCOUNT:-<unset>}"
  echo "  New project  : ${EFFECTIVE_PROJECT:-<unset>}"
  echo "  New account  : ${EFFECTIVE_ACCOUNT:-<unset>}"
  if [[ "$ASSUME_YES" -ne 1 ]]; then
    if ! confirm_change "Update this profile"; then
      echo "Aborted: profile unchanged."
      return 1 2>/dev/null || exit 1
    fi
  fi
fi

if [[ "$PROFILE_EXISTS" -eq 0 ]]; then
  RUN_GCLOUD_LOGIN=1
  RUN_ADC_LOGIN=1
elif [[ "$ACCOUNT_CHANGED" -eq 1 ]]; then
  RUN_GCLOUD_LOGIN=1
  RUN_ADC_LOGIN=1
elif [[ "$PROJECT_CHANGED" -eq 1 ]]; then
  if [[ -f "${GCP_CFG_DIR}/application_default_credentials.json" ]]; then
    RUN_ADC_QUOTA_SET=1
  else
    RUN_ADC_LOGIN=1
  fi
fi

# Export per-shell variables (only sticks if sourced)
export GCP_CFG_BASE="$GCP_CFG_BASE"
export CLOUDSDK_CONFIG="$GCP_CFG_DIR"
export GOOGLE_CLOUD_PROJECT="$EFFECTIVE_PROJECT"
export GCLOUD_PROJECT="$EFFECTIVE_PROJECT"
export CLOUDSDK_CORE_PROJECT="$EFFECTIVE_PROJECT"

echo "==> Using profile: $PROFILE"
echo "==> CLOUDSDK_CONFIG=$CLOUDSDK_CONFIG"
echo "==> Project: $EFFECTIVE_PROJECT"
if [[ -n "$EFFECTIVE_ACCOUNT" ]]; then
  echo "==> Preferred account: $EFFECTIVE_ACCOUNT"
fi
echo

if [[ "$RUN_PROFILE_MUTATION" -eq 0 ]]; then
  echo "==> Switched to existing profile. Re-auth skipped."
  echo "==> Run: gcp-status"
  return 0 2>/dev/null || exit 0
fi

if [[ ! -t 0 && "$ASSUME_YES" -ne 1 && ( "$RUN_GCLOUD_LOGIN" -eq 1 || "$RUN_ADC_LOGIN" -eq 1 ) ]]; then
  echo "Error: non-interactive mutation requires -y|--yes." >&2
  return 2 2>/dev/null || exit 2
fi

run_auth_mutation() {
  local total_steps=0
  local step=0

  umask 077
  mkdir -p "$GCP_CFG_BASE" "$GCP_CFG_DIR"
  chmod 700 "$GCP_CFG_BASE" "$GCP_CFG_DIR" 2>/dev/null || true

  # Set project in this config (safe to run repeatedly)
  gcloud --quiet config set project "$EFFECTIVE_PROJECT" >/dev/null

  # If an account was provided, try to set it (doesn't authenticate by itself)
  if [[ -n "$EFFECTIVE_ACCOUNT" ]]; then
    gcloud --quiet config set account "$EFFECTIVE_ACCOUNT" >/dev/null || true
  fi

  total_steps=$((RUN_GCLOUD_LOGIN + RUN_ADC_LOGIN + RUN_ADC_QUOTA_SET))

  if [[ "$RUN_GCLOUD_LOGIN" -eq 1 ]]; then
    step=$((step + 1))
    echo "==> Step ${step}/${total_steps}: gcloud auth login (user creds for gcloud CLI)"
    # --brief reduces prompts; if it fails (older gcloud), fall back.
    gcloud auth login ${EFFECTIVE_ACCOUNT:+--account="$EFFECTIVE_ACCOUNT"} --brief 2>/dev/null \
      || gcloud auth login ${EFFECTIVE_ACCOUNT:+--account="$EFFECTIVE_ACCOUNT"}
  fi

  if [[ "$RUN_ADC_LOGIN" -eq 1 ]]; then
    step=$((step + 1))
    echo
    echo "==> Step ${step}/${total_steps}: gcloud auth application-default login (ADC for SDKs/Terraform/libs)"
    gcloud auth application-default login ${EFFECTIVE_ACCOUNT:+--account="$EFFECTIVE_ACCOUNT"} --quiet
  elif [[ "$RUN_ADC_QUOTA_SET" -eq 1 ]]; then
    step=$((step + 1))
    echo
    echo "==> Step ${step}/${total_steps}: gcloud auth application-default set-quota-project (ADC quota alignment)"
    gcloud auth application-default set-quota-project "$EFFECTIVE_PROJECT" --quiet
  fi
}

if ! gcp_run_with_lock "$GCP_CFG_BASE" run_auth_mutation; then
  return 1 2>/dev/null || exit 1
fi

echo
echo "==> Done. Current terminal is now pinned (if you sourced this)."
echo "==> Run: gcp-status"
